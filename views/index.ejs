<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Practic</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body>
    <div class="main w-full main-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block w-full rounded-lg outline-none px-5 py-2 bg-zinc-800" type="text" name="task"
                    id="task" placeholder="Enter task">
                <textarea class="block w-full rounded-lg outline-none mt-2 px-5 py-2 resize-none bg-zinc-800"
                    name="description" id="description" cols="30" rows="10" placeholder="Enter description"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-lg" type="submit" value="Add task">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length > 0){%>
                <% files.forEach(function(value){ %>
                    <div class="task min-w-72 px-3 py-4 rounded-lg bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= value %></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline-block" href="/file/<%= value %>">Read more</a>
                            <a class="text-zinc-600" href="/edit/<%= value %>">Edit</a> 
                        </div>
                       
                    </div>
                <%}) %>
            <%} else { %>
                <h3 class="text-zinc-600">No task yet.</h3>
            <%} %>
        </div>
    </div>
</body>

</html>